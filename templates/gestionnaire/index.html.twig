{% extends 'base.html.twig' %}

{% block title %}Gestionnaire index{% endblock %}

{% block body %}
    <h1>Gestionnaire index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Iden_ges</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Nom_ges</th>
                <th>Pren_ges</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for gestionnaire in gestionnaires %}
            <tr>
                <td>{{ gestionnaire.id }}</td>
                <td>{{ gestionnaire.idenGes }}</td>
                <td>{{ gestionnaire.roles ? gestionnaire.roles|json_encode : '' }}</td>
                <td>{{ gestionnaire.password }}</td>
                <td>{{ gestionnaire.nomGes }}</td>
                <td>{{ gestionnaire.prenGes }}</td>
                <td>
                    <a href="{{ path('gestionnaire_show', {'id': gestionnaire.id}) }}">show</a>
                    <a href="{{ path('gestionnaire_edit', {'id': gestionnaire.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('gestionnaire_new') }}">Create new</a>
{% endblock %}
